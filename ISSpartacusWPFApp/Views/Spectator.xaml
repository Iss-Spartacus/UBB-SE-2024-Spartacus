            <Label x:Name="labelFirstPlayerLife" Content="Life Player 1" HorizontalAlignment="Left" Margin="101,245,0,0" VerticalAlignment="Top"/>
            <Label x:Name="labelSecondPlayerLife" Content="Life Player 2" HorizontalAlignment="Left" Margin="612,245,0,0" VerticalAlignment="Top"/>
            <Button x:Name="buttonPariuFirstPlayer" Content="1 Milion pe Player 1" HorizontalAlignment="Left" Margin="69,330,0,0" VerticalAlignment="Top" Height="32" Width="138"/>
            <Button x:Name="buttonPariuSecondPlayer" Content="1 Milion pe Player 2" HorizontalAlignment="Left" Margin="580,330,0,0" VerticalAlignment="Top" Height="32" Width="138"/>
